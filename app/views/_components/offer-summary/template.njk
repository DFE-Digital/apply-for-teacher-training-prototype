{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}

{% set conditionsHtml %}
<ul class="govuk-list govuk-list--bullet">
  {% for condition in application.conditions %}
    <li>{{ condition.title }}</li>
  {% endfor %}
</ul>
<p class="govuk-body">Contact the provider to find out more about these conditions.</p>
<p class="govuk-body">They’ll confirm your place once you have met the conditions and they’ve checked your references.</p>
{% endset %}


{{ govukSummaryList({
  rows: [
    {
      key: {
        text: "Provider"
      },
      value: {
        text: application.providerName
      }
    },
    {
      key: {
        text: "Course"
      },
      value: {
        html: '<a href="#">' + application.course + '</a><br />QTS with PGCE full time'
      }
    },
    {
      key: {
        text: "Fees"
      },
      value: {
        html: 'UK Students: £9250'
      }
    },
    {
      key: {
        text: "Location"
      },
      value: {
        text: 'Main site'
      }
    },
    {
      key: {
        text: "Conditions"
      },
      value: {
        html: conditionsHtml
      }
    }
    ]
  })
}}
