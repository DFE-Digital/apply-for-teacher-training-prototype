{% extends "_layout.njk" %}

{% block content %}
  {% block message %}
  {% endblock %}

  {% if title %}
    <h1 class="govuk-heading-xl">
      {% if parent %}<span class="govuk-caption-xl">{{ parent }}</span>{% endif %}
      {{ title | safe }}
    </h1>
  {% endif %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {% block primary %}
      {% endblock %}
    </div>
    {% if hasSecondary %}
    <div class="govuk-grid-column-one-third">
      {% block secondary %}
      {% endblock %}
    </div>
    {% endif %}
  </div>
{% endblock %}
