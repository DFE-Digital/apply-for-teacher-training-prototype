{% extends "_form.njk" %}

{% set title = "Change your email address" %}
{% set formaction = "/account/check-email/change-email-address" %}
{% set isSignedOut = true %}

{% block pageNavigation %}
  {{ govukBackLink({
    href: "/"
  }) }}
{% endblock %}

{% block primary %}
  <p class="govuk-body-l">Your new email will become the address you use to sign in to the service.</p>

  {{ govukInput({
    label: {
      text: "Enter new email",
      classes: "govuk-label--m"
    },
    classes: "govuk-!-width-two-thirds",
    attributes: {
      spellcheck: "false"
    },
    autocomplete: "email",
    type: "email",
    id: "account-email",
    name: "account[email]"
  }) }}

  {{ govukButton({
    text: "Continue"
  }) }}
{% endblock %}
