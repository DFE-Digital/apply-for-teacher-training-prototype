{% extends "_form.njk" %}

{% set title = "Create an account" %}
{% set formaction = "/send-email/create-account" %}

{% block pageNavigation %}
  {{ govukBackLink({
    href: "/account/eligibility"
  }) }}
{% endblock %}

{% block primary %}
  <p class="govuk-body">Take a look at our <a href="/privacy-policy">privacy policy</a> before creating an account.</p>

  {{ govukInput({
    label: {
      text: "Email address",
      classes: "govuk-label--m"
    },
    hint: {
      text: "Weâ€™ll email you a new sign-in link every time you want to come back to your application"
    },
    classes: "govuk-!-width-two-thirds",
    attributes: {
      spellcheck: "false"
    },
    autocomplete: "email",
    type: "email",
    id: "account-email",
    name: "account[email]"
  }) }}

  {{ govukButton({
    text: "Create account"
  }) }}
{% endblock %}
