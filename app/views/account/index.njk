{% extends "_form.njk" %}

{% set title = "Create an account or sign in" %}
{% set hasAccountLinks = false %}

{% block primary %}
  {% set signinHtml %}
    {{ govukInput({
      label: {
        text: "Email address",
        classes: "govuk-label--s"
      },
      hint: {
        text: "Enter the email address you used to register, and weâ€™ll send you a link to sign in."
      },
      classes: "govuk-!-width-two-thirds",
      attributes: {
        spellcheck: "false"
      },
      autocomplete: "email",
      type: "email",
      id: "account-email",
      name: "account[email]"
    }) }}
  {% endset %}

  {{ govukRadios({
    idPrefix: "has-account",
    name: "has-account",
    fieldset: {
      legend: {
        text: "Do you already have an account?",
        classes: "govuk-fieldset__legend--m"
      }
    },
    items: [{
      value: "yes",
      text: "Yes, sign in",
      conditional: {
        html: signinHtml
      }
    }, {
      value: "no",
      text: "No, I need to create an account"
    }]
  }) }}

  {{ govukButton({
    text: "Continue"
  }) }}
{% endblock %}
