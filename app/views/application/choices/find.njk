{% extends "_form.njk" %}

{% set title = "Find a course" %}
{% set formaction = paths.next %}

{% block pageNavigation %}
  {{ govukBackLink({
    href: "/application/" + applicationId + "/choices/" + choiceId + "/found"
  }) }}
{% endblock %}

{% block primary %}
  <p class="govuk-body-l">Search for courses near you on Find postgraduate teacher&nbsp;training.</p>

  {{ govukButton({
    html: "Start now <span class=\"govuk-visually-hidden\">(Opens in a new window)</span>",
    href: data.findUrl,
    isStartButton: true,
    classes: "govuk-!-margin-bottom-2",
    attributes: {
      target: "_blank",
      "aria-describedby": "find-new-window"
    }
  }) }}
  <p class="govuk-body-s govuk-!-margin-bottom-6" id="find-new-window" aria-hidden="true">Opens in a new window</p>

  <p class="govuk-body"><a href="/application/{{ applicationId }}">Return to your application</a></p>
{% endblock %}
