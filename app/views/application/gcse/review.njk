{% extends "_form-wide.njk" %}

{% set applicationPath = "/application/" + applicationId %}
{% set formaction = applicationPath %}
{% set referrer = applicationPath + "/gcse/" + id + "/review" %}
{% set title = (id | capitalize) + " GCSE or equivalent" %}
{% set allowsFeedback = true %}
{% set canAmend = true %}

{% block pageNavigation %}
  {{ govukBackLink({
    href: "/application/" + applicationId,
    text: "Back to application"
  }) }}
{% endblock %}

{% block primary %}
  {% include "_includes/review/gcse.njk" %}

  {{ govukRadios({
    fieldset: {
      classes: "govuk-!-width-two-thirds",
      legend: {
        text: "Have you completed this section?",
        classes: "govuk-fieldset__legend--m"
      }
    },
    hint: {
      text: "Check the entry requirements for your chosen courses. Contact the training provider if you do not have the right grade."
    } if hasElligibleGrade,
    items: [{
      value: "true",
      text: "Yes, I’ve completed this section"
    }, {
      value: "false",
      text: "No, I’ll come back to it later"
    }]
  } | decorateApplicationAttributes(["completed", id])) }}

  {{ govukButton({
    text: "Continue"
  }) }}
{% endblock %}
