{% extends "_form.njk" %}

{% set applicationPath = "/application/" + applicationId %}
{% set title = "Unpaid experience" %}
{% set formaction = applicationPath + "/unpaid-experience/answer" %}

{% block pageNavigation %}
  {% if referrer %}
    {{ govukBackLink({
      href: referrer
    }) }}
  {% else %}
    {{ govukBackLink({
      href: "/application/" + applicationId,
      text: "Back to application"
    }) }}
  {% endif %}
{% endblock %}

{% block primary %}
  <p class="govuk-body">Tell us about any unpaid experience you have working with children or in a school. For example:</p>
  <ul class="govuk-list govuk-list--bullet">
    <li>one-off observations in a school</li>
    <li>volunteering at a children's club</li>
    <li>being a governor</li>
  </ul>
  <p class="govuk-body">You can also tell us about any other volunteering youâ€™ve done, and how this supports your application to become a teacher.</p>

  {{ govukRadios({
    fieldset: {
      classes: "govuk-!-margin-top-6",
      legend: {
        text: "Do you have any relevant unpaid experience?",
        classes: "govuk-fieldset__legend--m"
      }
    },
    items: [{
      value: "Yes",
      text: "Yes"
    }, {
      value: "No",
      text: "No"
    }]
  } | decorateApplicationAttributes(["unpaid-experience-decision"])) }}

  {{ govukButton({
    text: "Save and continue"
  }) }}
{% endblock %}
