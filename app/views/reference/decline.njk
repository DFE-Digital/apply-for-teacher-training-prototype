{% extends "_form.njk" %}

{% set candidate_name = "Jane Doe" %}
{% set title = "Youâ€™ve declined to give a reference" %}
{% set hasAccountLinks = false %}

{% block primary %}
  <p class="govuk-body">Teacher training courses can fill up quickly, and candidates need 2 references to apply.</p>
  <p class="govuk-body"> {{ candidate_name }} will be able to submit the application quicker if you give a reference.</p>

  {{ govukRadios({
    fieldset: {
      classes: "govuk-!-margin-top-6",
      legend: {
        text: "Are you sure you do not want to give " + candidate_name + " a reference?",
        classes: "govuk-fieldset__legend--m"
      }
    },
    items: [{
      value: "true",
      text: "Yes, I'm sure",
      conditional: {
        html: disabilityConditional
      }
    }, {
      value: "false",
      text: "No, I've changed my mind"
    }]
    } | decorateApplicationAttributes(["reasonable-adjustments", "disclose"])) }}

  {{ govukInput({
    name: "option",
    type: "hidden",
    value: option
  }) }}
  {{ govukButton({
    text: "Continue"
  }) }}
{% endblock %}
