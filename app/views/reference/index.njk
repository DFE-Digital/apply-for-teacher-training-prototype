{% extends "_form.njk" %}

{% set formaction = referrer or "/reference/safeguarding" %}
{% set candidate_name = "Jane Doe" %}
{% set title = "A reference for " + candidate_name + "" %}
{% set hasAccountLinks = false %}

{% block pageNavigation %}
  {% if referrer %}
    {{ govukBackLink({
      href: referrer
    }) }}
  {% endif %}
{% endblock %}

{% block primary %}

  <p class="govuk-body">Some content</p>

  {{ govukRadios({
    fieldset: {
      legend: {
        text: "Can you give a reference for " + candidate_name + "?",
        classes: "govuk-fieldset__legend--m"
      }
    },
    idPrefix: "reference-answer",
    name: "reference-answer",
    items: [{
      value: "Yes",
      text: "Yes",
      checked: checked("reference.relationship.correct", "Yes")
    }, {
      value: "No",
      text: "No",
      checked: checked("reference.relationship.correct", "No")
    }]
  }) }}

  {{ govukButton({
    text: "Save and continue"
  }) }}
{% endblock %}
